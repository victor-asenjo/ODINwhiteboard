<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.upc.essi.dtim.odin.project.Project" table="projects">
        <id name="projectId" column="project_id" type="string">
            <generator class="org.hibernate.id.UUIDGenerator" />
        </id>
        <property name="projectName" column="project_name" type="string" />
        <property name="projectDescription" column="project_description" type="string" />
        <property name="projectPrivacy" column="project_privacy" type="string" />
        <property name="projectColor" column="project_color" type="string" />
        <property name="createdBy" column="created_by" type="string" />
        <set name="localGraphIDs" sort="unsorted" table="local_graph_ids" lazy="false">
            <key column="project_id" />
            <element column="local_graph_id" type="string" />
        </set>
    </class>
</hibernate-mapping>
